<!-- views/admin/manageAccess.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Logs</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&display=swap');
    
        body {
            font-family: 'Baloo 2', sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('/assets/bigbg.png');
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
        }
    

        .container {
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
    background-image: url('/assets/vector.png');
    background-color: #fff;
    background-size: 1000px 1000px; /* Set specific dimensions for the background image */
    background-position: center -50px; /* Moves the image upward */
    background-repeat: no-repeat;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

        h1 {
        text-align: center;
        margin-bottom: 1.5rem;
        color: #680A76; 
    }

        .alert {
            padding: 10px;
            color: white;
            text-align: center;
            margin-bottom: 15px;
        }

        .alert-danger {
            background-color: #dc3545;
        }

        .alert-success {
            background-color: #28a745;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        button {
            border: none;
            padding: 5px 10px;
            color: white;
            cursor: pointer;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>

    

    <div class="container" id="grantAccess">
    
       
        <div>
            <a href="/admin/homeAdmin" onclick="showLoadingOverlay()">Go Back</a>
            <h1>Audit Logs</h1>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Initiotor </th>
                    <th>Action</th>
                    <th>target User</th>
                    <th>Room Name</th>

                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                <% logs.forEach(log => { %>
                    <tr>
                        <td><%= log.userName %></td>
                        <td><%= log.action %></td>
                        <td><%= log.targetUserName || 'N/A' %></td> <!-- For delete, targetUserName will be N/A -->
                        <td><%= log.roomName !== 'N/A' ? log.roomName : 'No Room Involved' %></td>
                        <td><%= new Date(log.timestamp).toLocaleString() %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

<style>
    /* Loading overlay */
    #loadingOverlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000; /* Ensure it appears above everything else */
    }

    /* Spinner */
    .spinner {
        border: 8px solid #f3f3f3; /* Light gray */
        border-top: 8px solid #3498db; /* Blue */
        border-radius: 50%;
        width: 60px;
        height: 60px;
        animation: spin 1s linear infinite;
    }

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>
    
</body>
</html>
