<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;700&display=swap" rel="stylesheet"> <!-- Baloo 2 font -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet"> <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="/homepage.css">
    <title>Admin Dashboard</title>
    <head>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    </head>
</head>
<body >
    <div class="container-fluid" style="min-height: 100vh;">
        <!-- Upper Section -->
        <div class="upper-side row no-gutters p-3">
            <aside class="col-md-2 col-12 bg-sidebar section greeting-text font-weight-bold text-muted d-flex align-items-center position-relative">
                <span>Hello <br> <%= room.name %></span>
            
                <!-- Dropdown Menu Trigger (Settings Icon) -->
                <img src="/assets/settings-1.svg" alt="Settings" class="img-fluid settings-icon ml-2 dropdown-toggle" style="width: 30px; cursor: pointer;" onclick="toggleDropdownMenu()">
            
                <!-- Dropdown Menu Content -->
                <div class="dropdown-content position-absolute" id="dropdownMenu" style="display: none; top: 50px; right: 10px;">
                    <a href="/admin/homeAdmin">Go back</a>
                    <a href="/admin/lessonRoomArchive/<%= room._id %>">Lesson Room  Archive</a>
                    <a href="/admin/pdfAndVideoArchive/<%= room._id %>">Pdf and Video Archive</a>
                    <a href="/admin/activitiesArchive/<%= room._id %>">Actvitiy Archive</a>
                    <a href="/logout">Logout</a>
                </div>
            </aside>
                      
            <!-- Main Content -->
            <main class="col-md-8 col-12  section">
                <select class="form-control mr-2">
                    <option value="">Select Level</option>
                    <script>
                        for (let i = 1; i <= 30; i++) {
                            document.write(`<option value="level${i}.html">Level ${i}</option>`);
                        }
                    </script>
                </select>
            </main>

            <!-- Right Sidebar -->
            <div class="col-md-2 col-12 bg-right-side section">
                <select class="form-control">
                    <option value="">Select Week</option>
                    <script>
                        for (let i = 1; i <= 6; i++) {
                            document.write(`<option value="week${i}.html">Week ${i}</option>`);
                        }
                    </script>
                </select>
            </div>
        </div>

        <!-- Main Content and Sidebars -->
        <div>
            <form action="/admin/dashboard/{{roomId}}" method="POST">
                <div class="containers row">
                   
                    <aside class="col-md-1 bg-info text-center p-3">
                        <nav>
                            <ul class="list-unstyled">
                                <li style="margin-bottom: 35px;">
                                    <span class="text-dark font-weight-bold" style="background-color: #FFDF9F; padding: 10px; border-radius: 5px; display: block;" onclick="reloadDashboard(event, '{{roomId}}')">
                                        <img src="/assets/homebut.png" alt="Home Button" style="width: 60px; height: 60px; display: block; margin: 0 auto;">
                                        Dashboard
                                    </span>
                                </li>
                                <li style="margin-bottom: 35px;">
                                    <a href="/admin/lesson/<%= room._id %>" class="text-dark">
                                        <img src="/assets/lessonbut.png" alt="Lesson Button" style="width: 60px; height: 60px; display: block; margin: 0 auto;">
                                        Lesson
                                    </a>
                                </li>
                                <li style="margin-bottom: 35px;">
                                    <a href="/admin/activities/<%= room._id %>" class="text-dark">
                                        <img src="/assets/activitiesbut.png" alt="Activities Button" style="width: 70px; height: 70px; display: block; margin: 0 auto;">
                                        Activities
                                    </a>
                                </li>
                                <li style="margin-bottom: 35px;">
                                    <a href="/admin/educGames/<%= room._id %>"  class="text-dark">
                                        <img src="/assets/educgamesbut.png" alt="Educational Games Button" style="width: 70px; height: 70px; display: block; margin: 0 auto;">
                                        Educational Games
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </aside>
        
                    <!-- Main Content Area -->
                    <main class="col-md-9 col-12 bg-main section">
                        <!-- <div class="big-box1 p-3 bg-main section d-flex justify-content-center align-items-center">
                            <img src="/assets/girl.png" alt="Girl" class="girl-image img-fluid">
                            
                        </div> -->

                        <% if (quizAnalytics && quizAnalytics.length > 0) { %>
                            <!-- Display the latest quiz, which is now the first item in sorted quizAnalytics -->
                            <% const latestQuiz = quizAnalytics[0]; %>
                            <div class="quiz-analytics my-4">
                                <h3 style="color: white;"><%= latestQuiz.quizTitle %>      
                                    
                               </h3>
                                
                                <div class="d-flex" style="color: white;">
                                    <div class="stat-box mr-5">
                                        <strong>Average</strong>
                                        <p><%= latestQuiz.averageScore %> / <%= latestQuiz.totalScore %> points</p>
                                    </div>
                                    <div class="stat-box mr-5">
                                        <strong>Median</strong>
                                        <p><%= latestQuiz.medianScore %> / <%= latestQuiz.totalScore %> points</p>
                                    </div>
                                    <div class="stat-box mr-5">
                                        <strong>Range</strong>
                                        <p><%= latestQuiz.range %></p>
                                    </div>
                                    

                                    <div class=" stat-box  ">
                                        <a href="/admin/dashboard/allTests/<%= room._id %>" class="btn btn-primary">Show All Test Results</a>
                                    </div>
                                </div>
                               
                                <canvas id="chart-<%= latestQuiz.quizTitle.replace(/\s+/g, '-') %>" width="400" height="200"></canvas>

                            </div>
                            <!-- Button to view all test results -->
                        
                        <% } else { %>
                            <p>No quiz analytics available.</p>
                        <% } %>
                        
                        
                        
                    </main>
                    
        
                    <!-- Right Sidebar -->
                    <aside class="col-md-2 col-12 section p-0">
                        <div class="d-flex flex-column h-100">
                            <div class="updates-container flex-fill p-3 mt-3">
                                <div class="updates-header d-flex align-items-center mb-2">
                                    <img src="/assets/codesandbox.svg" alt="CodeSandbox Icon" class="icon">
                                    <h3 class="h6 mb-0 ml-2">Updates</h3>
                                    <a  href="/admin/lesson/<%= room._id %>"  class="ml-auto text-primary">View All</a>
                                    
                                </div>
                                <!-- Latest PDF Lesson Update -->
                                <% if (latestPdf) { %>
                                    <div class="update-item">
                                        <img src="/assets/pdf-icon.svg" alt="PDF Icon" style="width: 40px;">
                                        <span>Latest Lesson: <br><a href="/admin/pdf/<%= latestPdf.pdfFileId %>" target="_blank"><%= latestPdf.pdfFileName %></a></span>
                                        <hr>
                                    </div>
                                <% } else { %>
                                    <div class="update-item">
                                        <span>No lessons uploaded yet.</span>
                                        <hr>
                                    </div>
                                <% } %>
                                
                                <div class="update-item">
                                    <img src="/assets/hand.png" style="width: 40px;">
                                    <span>Lessons completed:</span>
                                    <br>
                                    <% if (latestCompletedPdf) { %>
                                        <a href="/admin/pdf/<%= latestCompletedPdf.pdfFileId %>" target="_blank">
                                            <%= latestCompletedPdf.pdfFileName %>
                                        </a>
                                    <% } else { %>
                                        <span>No completed lessons yet.</span>
                                    <% } %>
                                    <hr>
                                </div>
                                
                                
                                <div class="update-item">
                                    <img src="/assets/man.png" style="width: 40px;">
                                    <span>Latest Quiz:</span>
                                    <br>
                                    <% if (latestQuiz) { %>
                                        <a href="/admin/quiz/<%= latestQuiz._id %>" target="_blank">
                                            <%= latestQuiz.title %>
                                        </a>
                                    <% } else { %>
                                        <span>No quizzes uploaded yet.</span>
                                    <% } %>
                                    <hr>
                                </div>
                            </div>
        
                            <div class="updates videos-container flex-fill p-3 mt-3" style="background-color: #E0F4F9;">
                                <div class="videos-header d-flex align-items-center mb-2">
                                    <img src="/assets/youtube.svg" alt="YouTube Icon" class="icon">
                                    <h3 class="h6 mb-0 ml-2">Videos</h3>
                                    <a href="/admin/lesson/<%= room._id %>" class="ml-auto text-primary">View All</a>
                                </div>
                                <div class="video-update-item">
                                    <% if (latestVideo) { %>
                                        <p>Latest Video: <br>
                                            <a href="/admin/video/<%= latestVideo.videoFileId %>" target="_blank">
                                                <%= latestVideo.videoFileName %>
                                            </a>
                                        </p>
                                    <% } else { %>
                                        <p>No videos uploaded yet.</p>
                                    <% } %>
                                </div>
                                
                            </div>
        
                            <div class="updates contact-container flex-fill p-3 mt-3" style="background-color: #E0F4F9;">
                                <div class="contact-header d-flex align-items-center mb-2">
                                    <img src="/assets/headphones.svg" alt="Headphones Icon" class="icon">
                                    <h3 class="h6 mb-0 ml-2">Contact</h3>
                                </div>
                            </div>
                        </div>
                    </aside>
               
                </div>
            </form>
        </div>
        
   
        



    <script>
        function loadLevelContent(level) {
            if (level) {
                // Logic to load level content dynamically
                console.log("Level selected: " + level); // You can replace this with actual content loading logic
            }
        }

        function loadWeekContent(week) {
            if (week) {
                // Logic to load week content dynamically
                console.log("Week selected: " + week); // You can replace this with actual content loading logic
            }
        }

        function toggleDropdownMenu() {
        const menu = document.getElementById("dropdownMenu");
        menu.style.display = menu.style.display === "block" ? "none" : "block";
    }

    // Close dropdown when clicking outside
    document.addEventListener("click", function(event) {
        const menu = document.getElementById("dropdownMenu");
        const trigger = document.querySelector(".settings-icon");

        if (!menu.contains(event.target) && event.target !== trigger) {
            menu.style.display = "none";
        }
    });
    </script>
    
    <script>
        const quizAnalytics = <%- JSON.stringify(quizAnalytics) %>;
        console.log('Loaded quizAnalytics:', quizAnalytics); // Verify data in console
    </script>
    
    <script src="/js/dashboard.js"></script>
</body>
</html>
