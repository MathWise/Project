<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Archived Lessons</title>
    <link rel="stylesheet" href="/lesson.css">
</head>
<body>
    <h1>Archived Lessons</h1>
    
    <div class="dropdown">
        <div class="dropdown-content">
            <a href="/admin/lesson/<%= roomId %>">Go Back</a>
            <a href="/login">Logout</a>
        </div>
    </div>

    <!-- Dropdown to select the type of archived content to view -->
    <div class="form-group">
        <label for="archiveSelect">Archived Option</label>
        <select class="form-control" id="archiveSelect" name="archiveSelect" onchange="loadArchivedContent()">
            <option value="lessons">Archived Lesson Rooms</option>
            <option value="pdfs">Archived PDF Lessons</option>
            <option value="videos">Archived Video Lessons</option>
        </select>
    </div>

    <!-- Archived Lesson Rooms Section -->
    <main class="col-md-11" id="archivedLessons" style="display: none;">
        <h2>Archived Lesson Rooms</h2>

        <ul class="list-group d-flex flex-row flex-wrap lesson-archive-list">
            <% if (archivedLessonRooms.length > 0) { %>
                <% archivedLessonRooms.forEach(function(lessonRoom) { %>
                    <li class="list-group-item lesson-room d-flex align-items-center mr-2">
                        <div class="d-flex justify-content-between w-100">
                            <div>
                                <strong><%= lessonRoom.subject %></strong> - <%= lessonRoom.topic %>
                                <p>Room ID: <%= lessonRoom.roomId %></p>
                            </div>
                            <button onclick="confirmUnarchive('lessonRoom', '<%= lessonRoom._id %>')">Unarchive</button>
                        </div>
                    </li>
                <% }) %>
            <% } else { %>
                <p>No archived lesson rooms available.</p>
            <% } %>
        </ul>
    </main>

 <!-- Debugging output to confirm data in archived PDFs section -->
 <main class="col-md-11" id="archivedPdfs" style="display: none;">
    <h2>Archived PDFs</h2>
    <ul class="list-group d-flex flex-row flex-wrap lesson-archive-list">
        <% if (archivedPdfs && archivedPdfs.length > 0) { %>
            <% archivedPdfs.forEach(function(pdf) { %>
                <li class="list-group-item d-flex align-items-center mr-2">
                    <div class="d-flex justify-content-between w-100">
                        <div>
                            <strong>PDF Name: <%= pdf.pdfFileName %></strong>
                            <p>PDF ID: <%= pdf.pdfFileId %></p>
                        </div>
                        <button onclick="confirmUnarchive('pdf', '<%= pdf.pdfFileId %>')">Unarchive</button>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <p>No archived PDFs available.</p>
        <% } %>
    </ul>
</main>

<!-- Archived Videos Section -->
<main class="col-md-11" id="archivedVideos" style="display: none;">
    <h2>Archived Videos</h2>
    <ul class="list-group d-flex flex-row flex-wrap lesson-archive-list">
        <% if (archivedVideos && archivedVideos.length > 0) { %>
            <% archivedVideos.forEach(function(video) { %>
                <li class="list-group-item d-flex align-items-center mr-2">
                    <div class="d-flex justify-content-between w-100">
                        <div>
                            <strong>Video Name: <%= video.videoFileName %></strong>
                            <p>Video ID: <%= video.videoFileId %></p>
                        </div>
                        <button onclick="confirmUnarchive('video', '<%= video.videoFileId %>')">Unarchive</button>
                    </div>
                </li>
            <% }) %>
        <% } else { %>
            <p>No archived videos available.</p>
        <% } %>
    </ul>
</main>
    <!-- JavaScript functions to manage the archive sections and unarchive requests -->
    <script>
        function loadArchivedContent() {
            const selectedOption = document.getElementById('archiveSelect').value;
            document.getElementById('archivedLessons').style.display = selectedOption === 'lessons' ? 'block' : 'none';
            document.getElementById('archivedPdfs').style.display = selectedOption === 'pdfs' ? 'block' : 'none';
            document.getElementById('archivedVideos').style.display = selectedOption === 'videos' ? 'block' : 'none';
        }

        // Trigger loadArchivedContent on page load to default to "Archived Lesson Rooms"
        document.addEventListener('DOMContentLoaded', () => {
            loadArchivedContent();
        });

        // Confirmation function for unarchiving
        function confirmUnarchive(type, id) {
            if (confirm("Are you sure you want to unarchive this item?")) {
                if (type === 'lessonRoom') {
                    unarchiveLessonRoom(id);
                } else if (type === 'pdf') {
                    unarchivePdf(id);
                } else if (type === 'video') {
                    unarchiveVideo(id);
                }
            }
        }

        function unarchiveLessonRoom(lessonRoomId) {
            fetch(`/admin/unarchive-lesson-room/${lessonRoomId}`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                window.location.reload();
            })
            .catch(error => console.error('Error unarchiving lesson room:', error));
        }

        function unarchivePdf(pdfFileId) {
            fetch(`/admin/unarchive-pdf/${pdfFileId}`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                window.location.reload();
            })
            .catch(error => console.error('Error unarchiving PDF:', error));
        }

        function unarchiveVideo(videoFileId) {
            fetch(`/admin/unarchive-video/${videoFileId}`, { method: 'POST' })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                window.location.reload();
            })
            .catch(error => console.error('Error unarchiving video:', error));
        }
    </script>
</body>
</html>
