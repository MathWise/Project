<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Result Details</title>
    <!-- Include Bootstrap CSS -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .container {
            margin-top: 40px;
        }
        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        ul.list-group li {
            border: none;
            padding: 15px 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Quiz Title Card -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h3>Quiz Result Details</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">Quiz Title: <strong><%= quizResult.quizId.title %></strong></h5>
                <p class="card-text">
                    <strong>Score:</strong> <%= quizResult.score %> <br>
                    <strong>Submitted At:</strong> <%= new Date(quizResult.submittedAt).toLocaleString() %>
                </p>
            </div>
        </div>

        <!-- Questions and Answers Section -->
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5>Questions and Answers</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <% quizResult.answers.forEach((answer, index) => { %>
                        <li class="list-group-item d-flex flex-column">
                            <div>
                                <strong>Question <%= index + 1 %>:</strong> <%= answer.questionText %>
                            </div>
                            <div>
                                <strong>Your Answer:</strong>
                                <span class="<%= answer.isCorrect ? 'text-success' : 'text-danger' %>">
                                    <%= answer.userAnswer %>
                                </span>
                            </div>
                            <div>
                                <strong>Correct:</strong>
                                <span class="<%= answer.isCorrect ? 'text-success' : 'text-danger' %>">
                                    <%= answer.isCorrect ? 'Yes' : 'No' %>
                                </span>
                            </div>
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
<br>
        <!-- Back Button -->
        <a href="/user/dashboard/<%= roomId %>" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <!-- Include Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
